@model InventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Delete Product";
}

<div class="container mt-4">
    <h1>Delete Product</h1>
    
    <div class="alert alert-danger mb-4">
        <h5><i class="bi bi-exclamation-triangle"></i> Are you sure you want to delete this product?</h5>
        <p>This action cannot be undone.</p>
    </div>
    
    <div class="card shadow mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">@Model.ProductName</h5>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ProductImage1))
                    {
                        <img src="@Model.ProductImage1" alt="@Model.ProductName" class="img-fluid rounded mb-3" />
                    }
                    else
                    {
                        <div class="bg-light p-5 text-center rounded mb-3">
                            <i class="bi bi-image text-muted" style="font-size: 4rem;"></i>
                            <p class="text-muted mb-0">No image available</p>
                        </div>
                    }
                </div>
                
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsLowStock)
                            {
                                <span class="badge bg-danger">@Model.Quantity - Low Stock!</span>
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.Quantity)
                            }
                        </dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedDate)</dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="card-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="bi bi-trash"></i> Confirm Delete
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 