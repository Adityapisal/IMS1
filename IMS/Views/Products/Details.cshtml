@model InventoryManagementSystem.Models.Product

@{
    ViewData["Title"] = "Product Details";
}

<div class="container mt-4">
    <h1>Product Details</h1>
    
    <div class="card shadow mb-4">
        <div class="card-header bg-light d-flex justify-content-between align-items-center">
            <h5 class="mb-0">@Model.ProductName</h5>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-sm btn-primary">
                    <i class="bi bi-pencil"></i> Edit
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-sm btn-danger">
                    <i class="bi bi-trash"></i> Delete
                </a>
            </div>
        </div>
        
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    @if (!string.IsNullOrEmpty(Model.ProductImage1))
                    {
                        <div class="mb-4">
                            <img src="@Model.ProductImage1" alt="@Model.ProductName" class="img-fluid rounded" />
                        </div>
                    }
                    
                    <div class="row mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProductImage2))
                        {
                            <div class="col-6">
                                <img src="@Model.ProductImage2" alt="@Model.ProductName" class="img-fluid rounded" />
                            </div>
                        }
                        
                        @if (!string.IsNullOrEmpty(Model.ProductImage3))
                        {
                            <div class="col-6">
                                <img src="@Model.ProductImage3" alt="@Model.ProductName" class="img-fluid rounded" />
                            </div>
                        }
                    </div>
                </div>
                
                <div class="col-md-6">
                    <dl class="row">
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.ProductName)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.ProductName)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Category)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Category.Name)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Price)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Price)</dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Quantity)</dt>
                        <dd class="col-sm-8">
                            @if (Model.IsLowStock)
                            {
                                <span class="badge bg-danger">@Model.Quantity - Low Stock!</span>
                            }
                            else
                            {
                                @Html.DisplayFor(model => model.Quantity)
                            }
                        </dd>
                        
                        <dt class="col-sm-4">@Html.DisplayNameFor(model => model.CreatedDate)</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CreatedDate)</dd>
                    </dl>
                </div>
            </div>
        </div>
        
        <div class="card-footer">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div> 